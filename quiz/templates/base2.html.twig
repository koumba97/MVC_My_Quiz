<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My Quiz{% endblock %}</title>
        {% block stylesheets %} {{ encore_entry_link_tags('style') }}{% endblock %}
    </head>
    <body>
        <nav>
            <h3>My Quiz</h3>

            {# si joueur invité #}
            {% if app.session.get('playerName') %}
                <p>Hey {{ app.session.get('playerName') }} !</p>

                <div>
                    <p><a href='../out'>CATÉGORIES</a></p>
                    <p><a href='/score'>SCORE</a></p>
                    <p><a href='/logout'>DECONNECTION</a></p>
                </div>

            {# si joueur connecté #}
            {% elseif app.user %}
            
                <p>Hey {{ app.user.username }} !</p>

                <div>
                    <p><a href='/profile'>PROFILE</a></p>
                    <p><a href='../out'>CATÉGORIES</a></p>
                    <p><a href='/score'>SCORE</a></p>
                    <p><a href='/logout'>DECONNECTION</a></p>
                </div>
            
            {# si joueur non connecté #}
            {% else %}
                <div>
                    <p><a href='/'>HOME</a></p>
                    <p><a href='#'>ADMIN</a></p>
                    <p><a href='/score'>SCORE</a></p>
                    <p><a href='/register'>INSCRIPTION</a></p>
                    <p><a href='/login'>CONNEXION</a></p>
                </div>
            {% endif %}
        </nav>
        
        {% block body %}{% endblock %}
       
    </body>
</html>
